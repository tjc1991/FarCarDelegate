<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cldxk.farcardelegate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    
    <uses-permission android:name="android.permission.INTERNET"/> 
	<!--获取当前wifi状态 -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/> 
	<!--允许程序改变网络连接状态 -->
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>     

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.cldxk.app.EApplication"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cldxk.app.ui.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.cldxk.app.ui.LoginActivity"></activity>
        <activity android:name="com.cldxk.app.ui.MainActivity"></activity>
        
    </application>

</manifest>
